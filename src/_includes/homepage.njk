{% extends "base.njk" %}
{% block main %}
  <header style="display: flex; align-items: center;">
    <img
      width="60px"
      src="assets/profile.jpg"
      alt="My profile picture"
      style="margin-right: 10px; border-radius: 10px;"
    />
    <div class="header-container">
      <h1 style="margin: 0;">{{ main }}</h1>
      <span id="toggleDarkMode" class="fas fa-moon"></span>
    </div>
  </header>
  {{ content | safe }}
  <hr />
  <h2>Projects</h2>
  <ul>
    {% for portfolio in collections.portfolio %}
      <li>
        <a class="post-link" href="{{ portfolio.url }}"
          >{{ portfolio.data.title }}</a
        >
        - {{ portfolio.data.summary }}
      </li>
    {% endfor %}
  </ul>
{% endblock %}
